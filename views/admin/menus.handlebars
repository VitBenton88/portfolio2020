<div class="container-fluid menus page">
    <div class="row">

        {{> admin/components/menus/main menu-menus=true}}

        <div class="col-12 col-lg-10">
            <div class="row no-gutters">

                {{> admin/components/heading heading='Menus'}}

                {{> admin/components/notifications}}

                <div class="container page-body">
                    <div class="row justify-content-end">
                        <div class="col-12 col-lg-8 col-xl-6 pr-0 d-flex justify-content-end">
                            <form id="search" class="form-inline">
                                <div class="form-group">
                                    <input name="search" type="search" class="form-control"
                                        placeholder="Search Menus ..." value="{{search}}">
                                    {{#if this.orderBy}}<input type="hidden" name="orderBy" value="{{this.orderBy}}">{{/if}}
                                    {{#if this.sort}}<input type="hidden" name="sort" value="{{this.sort}}">{{/if}}
                                </div>
                                <button type="submit" class="btn btn-light ml-3">Search</button>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        {{#if search}}
                            <div class="col-12">
                                <h5 class="mt-3">Search Results: "{{search}}"</h5>
                            </div>
                        {{/if}}
                        <div class="col-12">
                            {{#if menus}}
                            <table class="table table-striped table-responsive-sm mt-3" id="list">
                                <thead>
                                    <tr>
                                        <th><a href="?orderBy=name&sort={{#if this.sort}}{{this.sort}}{{else}}asc{{/if}}">Name</a></th>
                                        <th><a href="?orderBy=slug&sort={{#if this.sort}}{{this.sort}}{{else}}asc{{/if}}">Slug</a></th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each menus}}
                                    {{#with this}}
                                        <tr>
                                            <td><a href="menus/edit/{{slug}}">{{name}}</a></td>
                                            <td>{{slug}}</td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-secondary dropdown-toggle btn-sm" type="button"
                                                        id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                                        aria-expanded="false">Select</button>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <a class="dropdown-item" href="menus/edit/{{slug}}">Edit</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {{/with}}
                                    {{else}}
                                    <div class="alert alert-warning fade show mb-3 mt-3" role="alert">
                                        <strong>Sorry, there are no menus.</strong>
                                    </div>
                                    {{/each}}
                                </tbody>
                            </table>
                            {{else}}
                            <div class="alert alert-warning fade show mb-3 mt-3" role="alert">
                                <strong>Sorry, no menus found.</strong>
                            </div>
                            {{/if}}
                        </div>

                        <div class="col-12">
                            {{> admin/components/pagination data=menus}}
                        </div>

                        <div class="col-12 col-md-6 col-lg-4 menu-item">
                            <div class="card card-body">
                                <form action="/addmenu" method="POST" id="addmenu">
                                    <div class="form-group">
                                        <label for="title">Add Menu</label>
                                        <small id="name-help" class="form-text text-muted">Name of menu.</small>
                                        <input name="name" class="form-control" type="text" aria-describedby="name-help"
                                            placeholder="Enter name of menu ..." required>
                                    </div>
                                    <button type="submit" class="btn btn-success btn-block btn-lg">Create</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>